extends ../../layouts/layout.pug

block content
  .section--primary#content
    .container
      h1 Petition New Motorway Bill

  section
    .container
      h2 Business / Organisation details
      +form('page07.html')
        +input('text', 'Business / Organisation name', 'organisation name', 'txtOrgName')(required)
        +input('text', 'Business / Organisation Address line 1', 'address', 'txtOrgAddress1')(required)
        +input('text', 'Business / Organisation Address line 2', 'address', 'txtOrgAddress2')
        +input('text', 'Business / Organisation Post code', 'post code', 'txtOrgPostCode')(required)

        br
        p Please specify a representative for your business or organisation.

        +input('text', 'Contact name', 'contact name', 'txtOrgName')(required)
        +input('text', 'Contact Email address', 'email', 'txtOrgEmail')(required)
        +input('text', 'Contact Telephone number', 'phone', 'txtOrgPhone')

        br
        .status--highlight.theme--grey-4
          +input('checkbox', 'Do you have a representative?', 'agent-rep', 'toggleContent')

        #contentPane
          h2 Representative's details

          +input('text', 'Full name', 'name', 'txtAgtName')
          +input('text', 'Address line 1', 'address', 'txtAgtAddress1')
          +input('text', 'Address line 2', 'address', 'txtAgtAddress2')
          +input('text', 'Post code', 'post code', 'txtAgtPostCode')
          +input('text', 'Email address', 'email', 'txtAgtEmail')
          +input('text', 'Telephone number', 'phone', 'txtAgtPhone')

          br
          p Who should be contacted about this petition?

          +input('checkbox', 'You', 'contact-ind', 'chkIndCnt')(checked)
          +input('checkbox', 'Your representative', 'contact-agt', 'chkAgentCnt')

        br
        +button('Next', 'btn--primary')
      br
      p < #[+link('page03.html', 'Back')]
