extends ../../layouts/layout.pug

block content
  .section--primary#content
    .container
      h1 Petition New Motorway Bill

  section
    .container
      h2 Representative's details
      +form('page07.html')
        +input('text', 'Full name', 'name', 'txtAgtName')(required)
        +input('text', 'Address line 1', 'address', 'txtAgtAddress1')(required)
        +input('text', 'Address line 2', 'address', 'txtAgtAddress2')
        +input('text', 'Post code', 'post code', 'txtAgtPostCode')(required)
        +input('text', 'Email', 'email', 'txtAgtEmail')(required)
        +input('text', 'Phone', 'phone', 'txtAgtPhone')

        h2 Group contact's details
        p Please provide contact details for a member of the group you are representing.
        
        +input('text', 'Group name (optional)', 'name', 'txtGroupName')
        +input('text', 'Full name', 'name', 'txtName')(required)
        +input('text', 'Address line 1', 'address', 'txtAddress1')(required)
        +input('text', 'Address line 2', 'address', 'txtAddress2')
        +input('text', 'Post code', 'post code', 'txtPostCode')(required)
        +input('text', 'Email', 'email', 'txtEmail')(required)
        +input('text', 'Phone', 'phone', 'txtPhone')
        
        //p Who should be contacted about this petition?

        //+input('checkbox', 'You', 'contact-agt', 'chkAgentCnt')
        //+input('checkbox', 'Group contact', 'contact-grp', 'chkGrpCnt')
        
        br
        +button('Next', 'btn--primary')
      br
      p < #[+link('page04.html', 'Back')]
