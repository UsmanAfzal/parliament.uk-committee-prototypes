extends ../../layouts/layout.pug

block content
  .section--primary#content
    .container
      h1 Petition New Motorway Bill

  section
    .container
      h2 Representative's details
      +form('page07.html')
        +input('text', 'Full name', 'name', 'txtAgtName')(required)
        +input('text', 'Address line 1', 'address', 'txtAgtAddress1')(required)
        +input('text', 'Address line 2', 'address', 'txtAgtAddress2')
        +input('text', 'Post code', 'post code', 'txtAgtPostCode')(required)
        +input('text', 'Email', 'email', 'txtAgtEmail')(required)
        +input('text', 'Phone', 'phone', 'txtAgtPhone')

        h2 Organisation's details
        p Please provide details for the business or organisation you're representing.
        
        +input('text', 'Organisation name', 'organisation name', 'txtOrgName')(required)
        +input('text', 'Address line 1', 'address', 'txtOrgAddress1')(required)
        +input('text', 'Address line 2', 'address', 'txtOrgAddress2')
        +input('text', 'Post code', 'post code', 'txtOrgPostCode')(required)

        h2 Details of individual in organisation
        +input('text', 'Full name', 'contact name', 'txtOrgName')(required)
        +input('text', 'Email', 'email', 'txtOrgEmail')(required)
        +input('text', 'Phone', 'phone', 'txtOrgPhone')
        
        //p Who should be contacted about this petition?

        //+input('checkbox', 'You', 'contact-agt', 'chkAgentCnt')
        //+input('checkbox', 'Business / Organisation', 'contact-org', 'chkOrgCnt')
        
        br  
        +button('Next', 'btn--primary')
      br
      p < #[+link('page04.html', 'Back')]
