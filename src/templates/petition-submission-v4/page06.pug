extends ../../layouts/layout.pug

block content
  #content.hero.theme--grey-4
    .container
      h1 Upload your completed template
      p.lead Step 4 of 5 - Petition the #[+link('#', 'M404 Motorway Bill')]

  section
    .container
      h2 Uploaded file must be

      ul
        li in the same format as the #[+link('../../documents/bill-petition-template.docx', 'petition template')]
        li less than 20 MB in size
        li file type: doc, docx, rtf, txt, ooxml, odt or PDF

  section
    .container
      +form('/?', 'post')(enctype="multipart/form-data" novalidate class="box")
        .box__input
          <svg class="box__icon" xmlns="http://www.w3.org/2000/svg" width="50" height="43" viewBox="0 0 50 43">
            <path d="M48.4 26.5c-.9 0-1.7.7-1.7 1.7v11.6h-43.3v-11.6c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v13.2c0 .9.7 1.7 1.7 1.7h46.7c.9 0 1.7-.7 1.7-1.7v-13.2c0-1-.7-1.7-1.7-1.7zm-24.5 6.1c.3.3.8.5 1.2.5.4 0 .9-.2 1.2-.5l10-11.6c.7-.7.7-1.7 0-2.4s-1.7-.7-2.4 0l-7.1 8.3v-25.3c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v25.3l-7.1-8.3c-.7-.7-1.7-.7-2.4 0s-.7 1.7 0 2.4l10 11.6z"/></svg>
          <input type="file" name="files[]" id="file" class="box__file" data-multiple-caption="{count} files selected" multiple />
          <label for="file"><strong>Choose a file</strong><span class="box__dragndrop"> or drag it here</span>.</label>
          <button type="submit" class="box__button">Upload</button>
        
        .box__uploading
          Uploading &hellip;
        .box__success
          p Done!
          <a href="#" class="box__restart" role="button">Upload more?</a>
        .box__error
          p Error! span
          <a href="#" class="box__restart" role="button">Try again!</a>

  section
    .container
      <nav class="navigation--number" aria-label="Pagination">
        <a class="navigation-control navigation-control--right btn--primary btn--large" href="page07.html">Next</a>
      </nav>
