extends ../../layouts/layout.pug

block content
  #content.hero.theme--grey-4
    .container
      h1
        small The advertising industry inquiry
        span Inquiry details and submission guidelines
        span.context Step 3 of 6

      p #[+link('#', 'Back to previous page')(onclick='goBack()')]

  section
    .container
      h2 Inquiry details
      p #[+link('https://www.parliament.uk/documents/lords-committees/communications/advertising-industry/Final-Call-for-evidence.pdf', 'The advertising industry inquiry details')(target='_blank')]#[span.sr-only (This link will open in a new window)]

  section
    .container
      h2 Submission guidelines
      p Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus ac libero urna.

  section
    .container
      h2 Have you read the inquiry details and submission guidelines?

      +form(action='page05.html')
        .block--border__bottom(class='open', data-toggle='item')
          +fieldset
            +radio--checkbox__inline('radio', 'guideline-check', 'guideline-check-yes', 'Yes')(data-toggle='parent-item')
            +radio--checkbox__inline('radio', 'guideline-check', 'guideline-check-no', 'No')(class='open', data-toggle='parent-item', checked, data-submit='disabled')

          div(class='open', data-toggle='content')
            br
            .status--highlight.theme--caution
              p Before you continue, read the inquiry details and submission guidelines.

        +button('Next', 'btn--primary', 'submit')

      .section--minor
        .block.accent--mint
          h3 Help and support
          p For more information email #[+link('mailto:holcommunications@parliament.uk', 'holcommunications@parliament.uk')] or phone #[+link('tel:02072198662', '020 7219 8662')]
