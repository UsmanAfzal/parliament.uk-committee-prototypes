extends ../../layouts/layout.pug

block content
  .section--primary#content
    .container
      h1 Representative / Agent details

  section
    .container
      +form('#', 'post')
        +input('text', 'Full name', 'name', 'txtAgtName')
        +input('text', 'Address line 1', 'address', 'txtAgtAddress1')
        +input('text', 'Address line 2', 'address', 'txtAgtAddress2')
        +input('text', 'Post code', 'post code', 'txtAgtPostCode')
        +input('text', 'Email address', 'email', 'txtAgtEmail')
        +input('text', 'Telephone number', 'phone', 'txtAgtPhone')

        br
        p Please provide details for the organisation you are representing
        
        +input('text', 'Organisation name', 'organisation name', 'txtOrgName')
        +input('text', 'Organisation Address line 1', 'address', 'txtOrgAddress1')
        +input('text', 'Organisation Address line 2', 'address', 'txtOrgAddress2')
        +input('text', 'Organisation Post code', 'post code', 'txtOrgPostCode')

        br
        br

        +input('text', 'Contact name', 'contact name', 'txtOrgName')
        +input('text', 'Contact Email address', 'email', 'txtOrgEmail')
        +input('text', 'Contact Telephone number', 'phone', 'txtOrgPhone')
        
        br
        p Who would you prefer to be the main point of contact for correspondence?

        +input('checkbox', 'Representative / Agent', 'contact-agt', 'chkAgentCnt')
        +input('checkbox', 'Organisation', 'contact-org', 'chkOrgCnt')
        
        br
        +buttonLink('#', 'Next', 'btn--primary')
        p #[+link('page06.html', 'Next')]
