extends ../../layouts/layout.pug

block content
  .section--primary#content
    .container
      h1 Petition New Motorway Bill

  section
    .container
      h2 Representative's details
      +form('page06.html')
        +input('text', 'Full name', 'name', 'txtAgtName')(required)
        +input('text', 'Address line 1', 'address', 'txtAgtAddress1')(required)
        +input('text', 'Address line 2', 'address', 'txtAgtAddress2')
        +input('text', 'Post code', 'post code', 'txtAgtPostCode')(required)
        +input('text', 'Email address', 'email', 'txtAgtEmail')(required)
        +input('text', 'Telephone number', 'phone', 'txtAgtPhone')

        br
        p Please provide details for the organisation you are representing.
        
        +input('text', 'Organisation name', 'organisation name', 'txtOrgName')(required)
        +input('text', 'Organisation Address line 1', 'address', 'txtOrgAddress1')(required)
        +input('text', 'Organisation Address line 2', 'address', 'txtOrgAddress2')
        +input('text', 'Organisation Post code', 'post code', 'txtOrgPostCode')(required)

        br

        +input('text', 'Contact name', 'contact name', 'txtOrgName')(required)
        +input('text', 'Contact Email address', 'email', 'txtOrgEmail')(required)
        +input('text', 'Contact Telephone number', 'phone', 'txtOrgPhone')
        
        br
        p Who should be contacted about this petition?

        +input('checkbox', 'You', 'contact-agt', 'chkAgentCnt')
        +input('checkbox', 'Organisation', 'contact-org', 'chkOrgCnt')
        
        br  
        +button('Next', 'btn--primary')
      br
      p < #[+link('page03.html', 'Back')]
