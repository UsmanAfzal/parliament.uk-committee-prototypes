extends ../../layouts/layout.pug

block content
  .section--primary#content
    .container
      h1 Upload petition document
      
  section
    .container
      h2 Submission upload guidelines

      ul
        li Word Document (.doc/.docx format only)
        li 2Mb file size limit
        li No other media types

  section
    .container
      h2 Upload your document
      +form('page07.html')
        +input('file', 'Upload petition', 'file-upload', 'fileUpload')(required)

        br
        +button('Upload', 'btn--primary')
        br  
        p #[+link('page07.html', 'Next Page')]  
