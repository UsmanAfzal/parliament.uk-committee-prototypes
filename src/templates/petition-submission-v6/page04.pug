  section
    .container
      h2.typography--light Who are you submitting a petition for?
      +form(id='submitterType' action='page05-1.html')
        +fieldset
          .block--border__bottom
            ol.list--block
              li
                .list--details
                  +input('radio', 'Individual', 'submitter-type', 'ind')(data-route='page05-1.html', checked)
