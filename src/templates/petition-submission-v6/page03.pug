extends ../../layouts/layout-beta.pug

block content
  #content.hero.theme--grey-4
    .container
      h1 Writing your petition - online
        span.sr-only.
        span Object to the High Speed Rail (West Midlands – Crewe) Bill

      h2.typography--light Step 1 of 5

  section
    .container
      h2 To write your petition

      ol.list--number
        li download and save the petition template to your device
        li complete the petition template
        li save your completed template
        
      p We’ll ask you to upload your completed template at step 4
      
      ol.list--pipe
        li
          figure
            picture
              include ../../images/file-doc.svg
          .list--details
            h3 Petition template
            p .doc / .docx
            +buttonLink('../../documents/bill-petition-template.docx', 'Download template as Word document', 'btn--primary btn--icon', '')
              include ../../icons/download.svg

  section#completePetition.section--major
    .container
      h2.typography--light Have you completed your petition template?
      +form(action='page06.html')
        .block--border__bottom
          +fieldset
            .input-group__inline
              +input('radio', 'Yes', 'petition-check', 'check-yes')
            .input-group__inline
              +input('radio', 'No', 'petition-check', 'check-no')(checked)
              
          .status--highlight.theme--caution
            p Complete your petition template before you continue
        
        +button('Next', 'btn--primary', 'submit')(id="petitionCheck")
      
      p #[+link('page01.html', 'Back')]
        
      br
      .block
        h3 Help and support
        p For more information e-mail #[+link('#', 'petition@parliament.uk')] or phone 020 7219 3000
       
