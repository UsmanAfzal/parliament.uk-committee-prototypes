extends ../../layouts/layout-beta.pug

block content
  #content.hero.theme--grey-4
    .container
      h1
        span Petition by email, post or in person
        span.sr-only.
        span Object to the High Speed Rail (West Midlands â€“ Crewe) Bill

      h2.typography--light Step 1 of 2

  section
    .container
      h2.typography--light Who are you submitting a petition for?
      +form(id='submitterType' action='page02-1.html')
        .block--border__bottom
          +fieldset
            ol.list--block
              li
                .list--details
                  .input-group__verbose
                    input(type='radio', value='Individual', name='submitter-type', id='ind', data-route='page02-1.html', checked)
                    label(for='ind') Individual
                  p You are submitting a petition for one person.
              li
                .list--details
                  .input-group__verbose
                    input(type='radio', value='Group of individuals', name='submitter-type', id='grp', data-route='page02-2.html')
                    label(for='grp') Group of individuals
                  p You are submitting a petition for a group of people.

            ol.list--block
              li
                .list--details
                  .input-group__verbose
                    input(type='radio', value='Organisation', name='submitter-type', id='org', data-route='page02-3.html')
                    label(for='org') Organisation
                  p You are submitting a petition for a business or organisation.
              li
                .list--details
                  .input-group__verbose
                    input(type='radio', value='Group of organisations', name='submitter-type', id='orgs', data-route='page02-4.html')
                    label(for='orgs') Group of organisations
                  p You are submitting a petition for a group of businesses or organisations.

        +button('Next', 'btn--primary', 'submit')

        p #[+link('page01.html', 'Back')]
